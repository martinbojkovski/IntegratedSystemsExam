@model IntegratedSystems.Domain.Domain_Models.VacinatePatientDTO

<div class="row">
    <div class="col-md-4">
        <form asp-action="VacinatePatient">

            <input type="hidden" asp-for="VacinationCenterId" value="@Model.VacinationCenterId"/>

            <div class="form-group">
                <label asp-for="manufacturer" class="control-label"></label>
                @Html.DropDownListFor(x => Model.manufacturer, new SelectList(Model.Manufacturers), "-- Select Manufacturer --", new { @class = "form-control" })
            </div>
            <div class="form-group">
                <label asp-for="TimeTaken" class="control-label"></label>
                <input asp-for="TimeTaken" class="form-control" />
                <span asp-validation-for="TimeTaken" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="patientId" class="control-label"></label>
                @Html.DropDownListFor(x => Model.patientId, new SelectList(Model.patients, "Id", "FirstName"), new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>